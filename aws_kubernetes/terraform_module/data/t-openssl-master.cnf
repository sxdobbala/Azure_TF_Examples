[ req ]
req_extensions = v3_ca
distinguished_name = req_distinguished_name
x509_extensions	= server_cert
[ req_distinguished_name ]
commonName = kubernetes-master
[ v3_ca ]
basicConstraints = CA:FALSE
keyUsage = nonRepudiation, digitalSignature, keyEncipherment
extendedKeyUsage = serverAuth
subjectAltName = @alt_names
[ alt_names ]
DNS.1 = api.internal.CLUSTER_NAME_PLACE_HOLDER
DNS.2 = api.CLUSTER_NAME_PLACE_HOLDER
DNS.3 = kubernetes
DNS.4 = kubernetes.default
DNS.5 = kubernetes.default.svc
DNS.6 = kubernetes.default.svc.cluster.local
IP.1 = 127.0.0.1
IP.2 = 100.64.0.1
[ server_cert ]
nsCertType = server
extendedKeyUsage = serverAuth
