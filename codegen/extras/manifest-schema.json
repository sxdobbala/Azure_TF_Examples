header: basic auth -> submitter (if recipient is blank, same as submitter)
url params: recipient -> optional

{
version: string (schema/api-version),
application: {
name: string,
team: string,
type: string (bounded: sdss/st),
subtype: string (bounded: microservice/big-data/rules (like mime-type))
},
service-account: {
username: string,
group: string
},
billing: {
gl-code: string,
project-name: string,
tmdb-number: string (from ASK. this is synonmous with ask-app-id),
ask-application-name: string (optional, default: same as tmdb number)
},
features: [
feature: {
name: string,
uri: string (optional, part of the response),
version: string,
tmdb-number: string (from ASK. this is synonmous with ask-app-id),
ask-app-name: string (optional, default: get this from billing ask),
required-group: string (optional, default: whatever necessary group)
},
feature: {
name: github,
uri: string (optional),
version: string,
org-name: string (optional, defaults to the same as application team),
repo-name: string (optional, defaults to the same as application name)
},
feature: {
name: openShift,
uri: string (optional),
version: string (default: 3),
project-admin: string (optional, default: sevice-account),
cpu: float (optional, bounded: 0.5-16 millicores, default: 1),
ram: integer (optional, bounded: 1-64 Gb, default: 2),
project-name: string (optional, defaults to the same as application team),
description: string (optional, default: "Generated description"),
app-name: string (optional, defaults to the same as application name),
region: string (optional, default: us_midwest),
data-center: string (optional, bounded to: elr/ctc, default: elr),
env-zone: string (optional, bounded to: prod/nonprod, default: nonprod),
network-zone (optional, bounded to: core/dmz, default: core)
},
feature: {
name: artifactory,
uri: string (optional),
version: string (default: 4),
group-id: string (optional, default: application team),
service-account: string (optional, default: service-account username)
},
feature: {
name: jenkins,
uri: string (optional),
version: string (default: 2),
management-group: string (optional, default: application team),
description: string (optional, default: "generated description"),
folder-name: string (optional, default: application team),
dedicated: boolean (default: false, cannot do fully dedicated greenfield currently)
},
feature: {
name: xldeploy,
uri: string (optional),
version: string (default: tbd),
ask-app-owner: string (optional, get from ask probably some mgmt person),
management-group: string (optional, default: application team),
description: string (optional),
friendly-name: string (optional for mark, required by xld, default: application name)
},
feature: {
name: secure,
service-account: same as above
application-groups: [
other groups (like for db access),
]
},
feature: {
name: codgen,
uri: string (optional),
version: string (default: 0),
type: string (optional, default: application type),
repo-url: string (optional, default: taken from ),
facets: [string, string, string]
},
feature: {
name: ask,
uri: string (optional),
version: string (default: ),
formal-name: string (optional, default: application name),
alias-names: [],
short-name: string (optional, default: application name),
purpose: string (optional, default: "enable sdss or s&t"),
description: string (optional, default: "generated description"),
app-lifecycle-status: string (optional, default: "In Development"),
hosting-status: string (optional, default: "Optum Cloud"),
cloud-adoption-level: string (optional, default: "Cloud Enabled"),
software-type: string (optional, default: "Custom"),
development-methodology: string (optional, bounded: ?, default: "Agile - OSAM"),

}
]
}