
@Library('com.optum.jenkins.pipeline.library@master') _

pipeline {
  agent {
    label 'docker-maven-slave'
  }
  stages {
    stage ('Flowdock Announcement') {
      steps {
        // The string FLOWDOCK_API_PERSONAL should be the ID of a Jenkins "Secret Text" type credential
        // Personal user token can be found here: https://www.flowdock.com/account/tokens
        // Bot user token instructions can be found here: https://hubconnect.uhg.com/docs/DOC-131228
        // Source token instructions can be found here: https://www.flowdock.com/api/integration-getting-started
        // Oauth token instructions can be found here: https://www.flowdock.com/api/authentication
        glFlowdockSay credentialsId: "FLOWDOCK_API_PERSONAL", credentialsType: "user", flow: "jenkins-pipeline-as-code", message: "Hey JPAC flow, this was posted from a Jenkins pipeline"
      }
    }
  }
  post {
    always {
      echo 'This will always run'
    }
    success {
      echo 'This will run only if successful'
    }
    failure {
      echo 'This will run only if failed'
    }
    unstable {
      echo 'This will run only if the run was marked as unstable'
    }
    changed {
      echo 'This will run only if the state of the Pipeline has changed'
      echo 'For example, if the Pipeline was previously failing but is now successful'
    }
  }
}
