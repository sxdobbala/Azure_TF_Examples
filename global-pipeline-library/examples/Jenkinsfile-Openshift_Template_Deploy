#!/usr/bin/env groovy

//In order to make this method idempotent/part of a cicd process, there must be at least a three pod limit on your project.
//Deployments beyond the first will not work if the pod limit is two or less.


@Library("com.optum.jenkins.pipeline.library@master") _


pipeline {
  agent {
    label 'docker-maven-slave'
  }
  environment {
    OPENSHIFT_CREDENTIALS_ID = 'devopseng_tech'
    OPENSHIFT_PROJECT = 'project'
  }

  stages {
    stage ('Deploy Jenkins') {
      steps {
        //Git clone to get the template
        git branch: 'master', url: 'https://github.optum.com/jenkins/openshift.git'
        glOpenshiftDeployTemplate credentials: "$env.OPENSHIFT_CREDENTIALS_ID", ocpUrl: "https://ocp-ctc-core-nonprod.optum.com", project: "$env.OPENSHIFT_PROJECT", templateFile: 'jenkins-masters-template.yml', templateParams: [JENKINS_HOST_NAME: "jenkins-$env.OPENSHIFT_PROJECT"]
        glOpenshiftDeleteServiceResources credentials: "$env.OPENSHIFT_CREDENTIALS_ID", ocpUrl: "https://ocp-ctc-core-nonprod.optum.com", project: "$env.OPENSHIFT_PROJECT", serviceName: 'jenkins-old'
        sh '''rm -r *'''
      }
    }
    stage ('Deploy Cassandra') {
      steps{
        git branch: 'master', url: 'https://github.optum.com/cloud-scaffolding/templates.git'
        //This will throw an error if the oc cli has version <3.6 as statefulsets don't exist yet.
        glOpenshiftDeployTemplate credentials: "$env.OPENSHIFT_CREDENTIALS_ID", ocpUrl: "https://ocp-ctc-core-nonprod.optum.com", project: "$env.OPENSHIFT_PROJECT", templateFile: 'cassandra/cassandra-template.yml', templateParams: [NODE_COUNT:"2"]
        glOpenshiftDeleteServiceResources credentials: "$env.OPENSHIFT_CREDENTIALS_ID", ocpUrl: "https://ocp-ctc-core-nonprod.optum.com", project: "$env.OPENSHIFT_PROJECT", serviceName: 'cassandra'
      }
    }
  }
  post {
    always {
      echo 'This will always run'
    }
    success {
      echo 'This will run only if successful'
    }
    failure {
      echo 'This will run only if failed'
    }
    unstable {
      echo 'This will run only if the run was marked as unstable'
    }
    changed {
      echo 'This will run only if the state of the Pipeline has changed'
      echo 'For example, if the Pipeline was previously failing but is now successful'
    }
  }
}