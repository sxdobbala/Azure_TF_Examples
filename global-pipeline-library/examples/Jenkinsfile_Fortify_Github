#!/usr/bin/env groovy

@Library("com.optum.jenkins.pipeline.library@master") _

// This is an example Jenkinsfile where we build and then execute a Fortify Scan
// The Jenkins Global Pipeline Library that is being used is: https://github.optum.com/jenkins-pipelines/global-pipeline-library

pipeline {
  agent {
    label 'docker-maven-slave'
  }

  stages {
    stage ('Build') {
      steps {
        glMavenBuild javaVersion:"1.7.0",
                     additionalProps:['MAVEN_OPTS':'-Xms1024m -Xmx1024m']
      }
    }
    stage('Fortify') {
      steps {
        glFortifyScan fortifyBuildName:"Demo-Maven-App",
                      scarUploadToken:"1111111111111111111",
                      scarProjectName:"Demo_Maven_App",
                      scarProjectVersion:"1234"
      }
    }
  }
  post {
    always {
      echo 'This will always run'
      emailext body:  "Build URL: ${BUILD_URL}",
        subject: "$currentBuild.currentResult-$JOB_NAME",
        to: 'emailAddressGoesHere@optum.com'
    }
    success {
      echo 'This will run only if successful'
    }
    failure {
      echo 'This will run only if failed'
    }
    unstable {
      echo 'This will run only if the run was marked as unstable'
    }
    changed {
      echo 'This will run only if the state of the Pipeline has changed'
      echo 'For example, if the Pipeline was previously failing but is now successful'
    }
  }
}
