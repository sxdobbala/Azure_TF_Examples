{
    "variables": {
        "subnet_id": "{{env `SUBNET_ID`}}"
    },
    "builders": [
        {
            "type": "amazon-ebs",
            "region": "{{user `aws_region`}}",
            "instance_type": "t2.small",
            "ami_name": "{{user `ami_name`}}-{{isotime \"2006-01-02\"}}",
            "ami_description": "{{user `ami_description`}}",
            "ssh_username": "{{user `ssh_username`}}",
            "source_ami_filter": {
                "filters": {
                    "virtualization-type": "hvm",
                    "name": "{{user `source_ami_filter_name`}}",
                    "root-device-type": "ebs",
                    "architecture": "x86_64"
                },
                "owners": "{{user `source_ami_owner_name`}}",
                "most_recent": true
            },
            "ami_regions": "{{user `ami_regions`}}",
            "ami_users": "{{user `ami_users`}}",
            "subnet_id": "{{user `subnet_id`}}",
            "associate_public_ip_address": true,
            "ssh_interface": "private_ip",
            "ami_virtualization_type": "hvm",
            "snapshot_users": "{{user `snapshot_users`}}",
            "tags": {
                "OS_Type": "{{user `os_type`}}",
                "Release": "Latest",
                "Packer": "true"
            }
        }
    ],
    "provisioners": [
        {
            "type": "file",
            "source": "/home/ec2-user/workspace/build-ami",
            "destination": "/tmp/"
        },
        {
            "type": "shell",
            "environment_vars": [
                "OS_TYPE={{user `os_type`}}",
                "AMI_BUILD_TYPE={{user `ami_build_type`}}"
            ],
            "inline": [
                "cd /tmp && bash build-ami"
            ]
        }
    ]
}
