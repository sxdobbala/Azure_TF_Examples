node {
  stage('Clone repository') {
    checkout scm
  }
  stage('uninstall kafka') {
    dir('uninstall'){
    sh 'sh ./kafkaUninstall.sh'
    }
  }
  stage('Verify Uninstall') {
    dir('uninstall'){
    sh 'sh ./isServiceDown.sh'
    }
  }
stage('Clean Framework from Zookeeper') {
    dir('uninstall'){
    sh 'sh ./frameworkCleaner.sh'
    }
  }
}
