      "@bdroid/navigator": [
        "libs/navigator/src/index.ts"
      ],
      "@bdroid/quickpanel": [
        "libs/quickpanel/src/index.ts"
      ],
      "@bdroid/not-found": [
        "libs/not-found/src/index.ts"
      ],
      "@bdroid/tenant": [
        "libs/tenant/src/index.ts"
      ],
      "@bdroid/ngx-graph": [
        "libs/ngx-graph/src/index.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp",
    "dist/**/*",
    "coverage/**/*",
    "tools/**/_*files/**/*"
  ]
}
